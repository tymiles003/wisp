<h1>Listing women</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Website</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @women.each do |woman| %>
      <tr>
        <td><%= image_tag woman.image.url(:medium) %></td>         
        <td><%= woman.name %></td>
        <td><%= woman.website %></td>
        <td><%= woman.status %></td>
        <td><%= link_to 'Show', woman %></td>
        <td><%= link_to 'Edit', edit_woman_path(woman) %></td>
        <td><%= link_to 'Destroy', woman, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

