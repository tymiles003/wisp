<div class="show">

<div class="left-margin row">
<p>
 
 <strong class="bold">Title:</strong>
  <p></p>
  <%= @job.title %>
</p>


 <strong class="bold">Company:</strong>
  <p></p>
  <%= simple_format(@job.description) %>
</p>

<strong class="bold">Summary:</strong>
<p>
  <p></p>
  <%= simple_format(@job.info) %>
</p>

<p>
  <strong class="bold">Requirements:</strong>
  <p></p>
  <%= simple_format(@job.reqs) %>
</p>

<p>
  <strong class="bold">Contact:</strong>
  <p></p>
  <%= mail_to @job.contact, @job.contact, target: '_blank' %>
</p>


<p>
  <strong class="bold">Website:</strong>
  <p></p>
  <%= link_to @job.website, @job.website, target: '_blank' %>
